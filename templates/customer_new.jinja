{% extends '__main.jinja' %}

{% block content %}
  {% macro render_field(field) %}
  <dt>{{ field.label }}
  <dd>{{ field(**kwargs)|safe }}
  {% if field.errors %}
      <ul class=errors>
      {% for error in field.errors %}
      <li>{{ error }}</li>
      {% endfor %}
      </ul>
  {% endif %}
  </dd>
  {% endmacro %}


  <section>
    <form method=post>
        <dl>
          {{ render_field(form.login, placeholder=form.login.label.text) }}
          {{ render_field(form.password, placeholder=form.password.label.text ) }}
          {{ render_field(form.name, placeholder=form.name.label.text ) }}
          {{ render_field(form.surname, placeholder=form.surname.label.text ) }}
          {{ render_field(form.telephone, placeholder=form.telephone.label.text ) }}
          {{ render_field(form.email, placeholder=form.email.label.text ) }}
          {{ render_field(form.hourly_rate, placeholder=form.hourly_rate.label.text ) }}
          {{ render_field(form.user_type_id) }}
        </dl>
        <input class="submit-button" type="submit" value=PÅ™idej>
      </form>
  </section>
{% endblock %}
